<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="-2dp"
        android:top="-2dp">
        <shape android:shape="rectangle" android:gravity="center">

            <stroke
                android:width="1dp"
                android:color="#828759" />
            <view
                android:gravity="bottom|center_horizontal" />
            <solid android:color="#D1CEB2" />

        </shape>
    </item>

</layer-list>